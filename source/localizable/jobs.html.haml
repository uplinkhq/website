---
id: jobs
---

- content_for :header do
  %h1
    = page_title
  %p
    = page_intro

%section
  .container
    %h2
      = t :headline, scope: %i(pages jobs)
    %p
      = t :text_1, scope: %i(pages jobs)
    %ul
      - t(:list, scope: %i(pages jobs)).each do |job_title|
        %li
          = link_to job_title, "/jobs/#{job_title.downcase.gsub(/\s+/, '-')}"
          = partial 'partials/job_meta', locals: { line_break: true }
    %p
      = t :text_2, scope: %i(pages jobs), email_link: mail_to('hello@uplink.tech', t(:email_link_text, scope: %i(pages jobs)))
