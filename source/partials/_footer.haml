%footer
  .container
    .row
      .col-sm-3.internal
        = link_to 'Uplink',          '/', class: 'brand'
        = link_to 'For Freelancers', '/freelancers'
        = link_to 'For Companies',   '/companies'
        = link_to 'Contact',         '/contact'
        = link_to 'Imprint',         '/imprint'
        = link_to 'Press Kit',       'https://drive.google.com/drive/folders/0B4gIb1U545pcYUZ4NUd6TGpfd0U', rel: 'nofollow', target: '_blank'
      .col-sm-6.social
        - %w(linkedin xing twitter facebook google-plus).each do |service|
          = link_to image_tag("social/#{service}.svg", lazy: true), t(service, scope: :profiles), target: '_blank'
      .col-sm-3.made-in-berlin
        = image_tag 'made-in-berlin.png', lazy: true, alt: 'Made in Berlin'
